{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/portfolio",
      "dest": "/api/portfolio.ts"
    },
    {
      "src": "/api/resume",
      "dest": "/api/resume.ts"
    },
    {
      "src": "/api/contact",
      "dest": "/api/contact.ts"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "functions": {
    "api/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend && yarn install",
  "buildCommand": "cd frontend && yarn build"
}